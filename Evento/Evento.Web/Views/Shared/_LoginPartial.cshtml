@using Microsoft.AspNetCore.Identity
@using Evento.Models.Entities;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <a href="/Admin/Index">
            <button class="iconBtn" id="createProjectBtn">
                <div class="iconBtn__content">

                    Admin
                </div>
            </button>
        </a>

    }
    <div class="profile__information">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile" title="Manage">@User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="profile__information">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="accoubtn text-dark" asp-controller="Account" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="accoubtn text-dark" asp-controller="Account" asp-action="Login">Login</a>
            </li>

        </ul>
        </div>
        }
